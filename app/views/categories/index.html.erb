<section class="categories-home">
  <nav class="home-nav">
    <div></div>
    <h4>categories</h4>
    <%= button_to destroy_user_session_path, method: :delete, class:"login-button" do %>
      <img src="data:image/png;base64,">
    <% end %>
  </nav>

  <p class= "text-align-center" style="color: green"><%= notice %></p>

  
<% if @categories.empty? %> 
  <div class="categories-body">
    <h2 class="">No Categories Yet</h2>
    <%=  link_to "Add new categories", new_category_path, class: "" %>
  </div>
<% else %>
  <div class="categories-body">
  <% @categories.each do |category| %>
    <%=link_to category_path(category), class: "category-item" do%> 
    <ul class="categories-list">
      <% if category.try(:persisted?) %>
        <li class="category cat-icon"><img src="<%= url_for(category.icon) %>" style = "width: 80px; height: 80px;"></li>
      <% end %>
      <li class="category cat-name"><%= category.name %></li>
      <li class="category paymentamt">$<%= category.payments.map{|p| p.amount}.sum %></li>
    </ul>
    <% end %>
  <% end %>
  <%= link_to new_category_path, class: "add-category-container" do %>
    <div>
      Add Category
    </div>
  <% end %>
  </div>
<% end %>
