  <p class= "text-align-center" style="color: green"><%= notice %></p>

  <div class="payments-body"> 
    <ul class="categories-list-payment">
      <li class="category icon-pay"><img src="<%= @category.icon %>" style = "width: 120px; height: 120px;"></li>
      <li class="category name-pay"><%= @category.name %></li>
      <li class="category payment-pay">$<%= @category.payments.map{|p| p.amount}.sum %></li>
    </ul>
    <div class="payments-list">
      <%@payments.each do |payment|%>
        <div class="payment">
          <p class="payment-name"><%= payment.name %></p>
          <p class="payment-amount">$<%= payment.amount %></p>
          <%= button_to payment_path(payment.id), method: :delete, onclick: "return confirm('Are you sure?')", class: "payment-del" do%>
            <img src="data:image/png;base64,">
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <%= link_to new_payment_path(:category_id => @category.id), class: "add-category-container" do %>
    <div>
      Add Transaction
    </div>
  <% end %>
